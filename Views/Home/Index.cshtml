@model List<NewsPortal.Services.EnrichedPostDto>
@{
    ViewData["Title"] = "Noticias";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container mt-4">
    <h2>Noticias</h2>
    <ul class="list-group">
        @foreach (var post in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Post", "Home", new { id = post.Id })">@post.Title</a>
                <span class="text-muted small ms-2">por @post.Author?.name</span>
                <span class="badge bg-secondary ms-2">@post.Comments.Count comentarios</span>
            </li>
        }
    </ul>
</div>
