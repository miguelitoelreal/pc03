@model List<NewsPortal.Services.EnrichedPostDto>
@{
    ViewData["Title"] = "Noticias";
}
<div class="container mt-4">
    <h1 class="fun-title mb-4 text-center">📰 Noticias Divertidas</h1>
    <div class="row g-4">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card fun-card h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-muted mb-2">por <b>@post.Author?.name</b></p>
                        <span class="fun-badge mb-2">@post.Comments.Count comentarios</span>
                        <a href="@Url.Action("Post", "Home", new { id = post.Id })" class="btn btn-primary fun-btn mt-auto">Ver más 🚀</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
